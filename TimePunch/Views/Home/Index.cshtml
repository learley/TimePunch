@model IEnumerable<TimePunch.Models.TimeEntry>

@{
    ViewBag.Title = "Home";
}


<div style="margin:1em;">
    <span style="display:inline-block;">
        @using (Html.BeginForm("NewEntry", "Home"))
        {
            <input class="btn btn-primary btn-lg" type="submit" name="new" value="New" />
        }
    </span>
    <span style="display:inline-block;">
        @using (Html.BeginForm("EndEntry", "Home"))
        {
            <input class="btn btn-primary btn-lg" type="submit" name="end" value="End" />
        }
    </span>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
